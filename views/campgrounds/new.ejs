<%-layout('layouts/boilerplate') %>
    <div class="container d-flex justify-content-center align-item-center">
        <div class="row my-3">
            <div class="col-6">
                <div class="card shadow" style="width: 30rem;">
                    <img src="https://images.unsplash.com/photo-1723159852612-21ad3c3e068e?q=80&w=1171&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">New campground</h5>
                        <form action="/campgrounds" method="POST" novalidate class="validate-form"
                            enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label" for="title">Title</label>
                                <input type="text" name="campground[title]" id="title" placeholder="title"
                                    class="form-control" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="location">Location</label>
                                <input class="form-control" type="text" name="campground[location]"
                                    placeholder="location" id="location" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Add images</label>
                                <input class="form-control" type="file" id="image" name="image" multiple>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="price">Price</label>
                                <input class="form-control" type="text" name="campground[price]" placeholder="$"
                                    id="price" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="campground[description]" rows="3"
                                    required></textarea>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success mb-3">Submit</button> 
                            </div>

                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>