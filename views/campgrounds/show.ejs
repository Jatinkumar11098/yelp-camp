<%-layout('./layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">
            <div class="card">
                <img src="<%=camp.image %>" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=camp.title%>
                    </h5>
                    <p class="card-text">
                        <%= camp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%=camp.location %>
                    </li>
                    <li class="list-group-item">
                        $<%=camp.price %>/night
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%=camp._id%>/edit" class="card-link btn btn-primary">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2>Reviews: </h2>
            <div class="reviews">
                <form action="/campgrounds/<%=camp._id %>/reviews" method="POST" novalidate class="validate-form">
                    <label for="customRange1" class="form-label">Rating:</label>
                    <input type="range" class="form-range" id="customRange1" name="review[rating]" min="1" max="5"
                        required>
                    <div class="mt-3">
                        <label for="body" class="form-label">Reviews</label>
                        <textarea class="form-control" name="review[body]" id="body" rows="10" cols="30"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success mt-3">Submit</button>

                </form>
            </div>
        </div>
    </div>