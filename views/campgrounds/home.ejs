<%-layout('./layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div class="my-2"><a href="/campgrounds/new">add new campground</a></div>
    <%for(let camp of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=camp.images[0].url %>" class="img-fluid" alt="">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=camp.title %>
                        </h5>
                        <p class="card-text">
                            <%=camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=camp.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>