<%-layout('./layouts/boilerplate') %>
    <h1 class="text-center my-3">Edit campground!!</h1>
    <div class="row">
        <div class="col-md-6 offset-3">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST" novalidate class="validate-form">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="campground[title]" id="title" placeholder="title" value="<%=camp.title%>"
                        class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="campground[location]" placeholder="location" id="location"
                        value="<%=camp.location%>" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="img">Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" placeholder="URL" id="image"
                        value="<%= camp.image %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" rows="3" required><%=camp.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-info">Update</button>
                <a href="/campgrounds/<%=camp._id%>">Back</a>
            </form>
        </div>
    </div>